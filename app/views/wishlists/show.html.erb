<h2>User Wishlist</h2>
<%= @user.wishlist.listings.sum %>
<div class="row">
  <% @wishlist.each do |wishlist_item| %>
    <div class="col-md-3">
        <div class="card mb-4 shadow-sm">
          <% if wishlist_item.image.attached? %>
              <%= cl_image_tag(wishlist_item.image.key, options = {class: 'img-fluid'}) %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= wishlist_item.title %></h5>
            <p class="card-text"><%= limit_characters_helper(wishlist_item.description, 100) %></p>
            <div class="d-flex align-items-center justify-content-between">
              <%= link_to 'View Listing', wishlist_item, class: "btn btn-success" %>
              <p class="lead m-0"><%= number_to_currency(wishlist_item.price) %></p>
            </div>
          </div>
        </div>
    </div>
  <% end %>
</div>